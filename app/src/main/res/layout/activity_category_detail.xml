<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/detailImageViewCategory"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:src="@drawable/shopping_tips"
        />

        <TextView
            android:id="@+id/detailTextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/detailTextViewLongDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This section gives a detailed explanation about the plant categoryâ€”its unique features, why it's useful in Ohio, and how it compares with plants from other regions like Indonesia or Africa."
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/detailTextViewOhioContextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relevant to Ohio:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/detailTextViewOhioContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This section explains how this plant category specifically relates to Ohio. This includes typical Ohio climate adaptation, common uses in Ohio landscapes, potential pests/diseases specific to the region, and comparisons to plants they might know from their home countries. For example, comparing Ohio Maples to trees found in African climates."
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/detailTextViewCareTipsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Care Tips:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/detailTextViewCareTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Practical tips for handling, planting, and basic care in a nursery setting. This includes watering needs, light requirements, soil preferences, and how to identify common problems relevant to Ohio's conditions. For example, ensuring proper drainage for evergreens in wet Ohio springs."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
