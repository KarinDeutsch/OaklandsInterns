<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NurseryDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Nursery Details"
                android:textSize="20sp"
                android:textColor="@color/textBtn"
                android:textStyle="bold"
                android:background="@color/btnBack"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>

            <ImageView
                android:id="@+id/oakland_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:clickable="true"
                android:src="@drawable/oaklandnurserylogo_1"
                android:layout_gravity="start"/>
        </FrameLayout>

        <!-- Nursery Info -->
        <TextView
            android:id="@+id/NurseryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nursery Name"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address Here"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="16sp"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <TextView
            android:id="@+id/info_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heading"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/info_paragraph1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paragraph 1"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/info_paragraph2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paragraph 2"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:paddingBottom="16dp" />


        <!-- Back Button -->
        <Button
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>

    </LinearLayout>
</ScrollView>
