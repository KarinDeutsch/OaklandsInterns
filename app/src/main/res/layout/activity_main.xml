<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="-8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/welcome_oakland_interns"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/textBtn"
            android:textStyle="bold"
            android:background="@color/btnBack"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_marginStart="5dp"
            android:id="@+id/oakland_logo"
            android:layout_height="wrap_content"
            android:src="@drawable/oaklandnurserylogo_1"
            android:layout_gravity="start|center_vertical"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:id="@+id/btnBack"
            android:backgroundTint="@color/textBtn"
            android:layout_gravity="center_vertical|end"/>
    </FrameLayout>

    <!-- Main container for the button grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- First Row of Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"> <!-- For 3 equal columns -->

            <ImageButton
                android:id="@+id/btnBasics"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/basics"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/btnNursery"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/nursery"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/btnPlants"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/plants"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>
        </LinearLayout>

        <!-- Second Row of Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"> <!-- For 3 equal columns -->

            <ImageButton
                android:id="@+id/btnEmergency"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/emergencies"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/btnUSA"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/usa_ohio"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/btnGuide"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/guide"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>
        </LinearLayout>

        <!-- Third Row of Buttons (only 2 in this case) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"> <!-- Still set to 3 for consistent column width -->

            <ImageButton
                android:id="@+id/btnFAQ"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/faq"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/btnChat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/chat"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>
            <androidx.constraintlayout.widget.Placeholder
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
