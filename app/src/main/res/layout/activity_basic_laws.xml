<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/welcome_oakland_interns"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/textBtn"
            android:textStyle="bold"
            android:background="@color/btnBack"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/oaklandnurserylogo_1"
            android:layout_gravity="start|center_vertical"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:id="@+id/btnBack"
            android:backgroundTint="@color/textBtn"
            android:layout_gravity="center_vertical|end"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Important U.S. Laws and Rules:"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/btnBack"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Drinking age is 21. No alcohol under 21 and no open container in the front of the car."
        android:textSize="14sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:background="@color/btnBack"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. No smoking or vaping under 21."
        android:textSize="14sp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:background="@color/btnBack"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Always carry your ID/passport when out as well as your DV2019"
        android:textSize="14sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:background="@color/btnBack"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Jaywalking is illegal. Cross at crosswalks."
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/btnBack"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Tipping (15â€“20%) is expected at restaurants."
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/btnBack"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textBtn"/>
</LinearLayout>