<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/welcome_oakland_interns"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/textBtn"
            android:textStyle="bold"
            android:background="@color/btnBack"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/oakland_logo"
            android:src="@drawable/oaklandnurserylogo_1"
            android:layout_gravity="start|center_vertical"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:id="@+id/btnBack"
            android:backgroundTint="@color/textBtn"
            android:layout_gravity="center_vertical|end"/>
    </FrameLayout>

    <!-- Define GridLayout with multiple columns -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="1"
        android:orientation="horizontal"
        android:padding="10dp">

    <!-- Define buttons inside the GridLayout -->
    <ImageButton
        android:id="@+id/btnUSLaw"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/usa_flag"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:layout_margin="15dp"
        android:stateListAnimator="@anim/scale_on_click"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:padding="10dp"/>

    <ImageButton
        android:id="@+id/btnOhioLaw"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ohio_flag"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:layout_margin="15dp"
        android:stateListAnimator="@anim/scale_on_click"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:padding="10dp"/>
    </GridLayout>
</LinearLayout>
