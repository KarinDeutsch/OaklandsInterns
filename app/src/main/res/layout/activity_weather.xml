<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="-8dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="@string/welcome_oakland_interns"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/textBtn"
                android:textStyle="bold"
                android:background="@color/btnBack"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>
            <ImageView
                android:layout_width="50dp"
                android:paddingStart="10dp"
                android:id="@+id/oakland_logo"
                android:layout_height="wrap_content"
                android:src="@drawable/oaklandnurserylogo_1"
                android:layout_gravity="start"/>
        </FrameLayout>

        <!-- Section for Seasons -->
        <TextView
            android:id="@+id/textViewSeasonsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Four Seasons of Ohio"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textViewSummer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summer (June - August): Hot and humid, temperatures often reach 80°F to 90°F (27°C to 32°C) or higher. Expect sunshine, but also thunderstorms and humidity. This might feel similar to the warmth in some parts of Africa, but with more defined humidity variations and storm activity."
        android:textSize="16sp"
        android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/textViewAutumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autumn (September - November): Pleasant and mild, with cooler temperatures and beautiful fall foliage. Daytime temperatures can be around 60°F to 70°F (15°C to 21°C), becoming cooler at night. This is often considered the most enjoyable season. "
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/textViewWinter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Winter (December - February): Cold, with temperatures often dropping below freezing (32°F / 0°C). You'll experience snow and icy conditions. This will be very different from most tropical climates you might be used to!  Temperatures rarely drop below −20 °F (−29 °C), but can feel very cold with wind and snowfall. "
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/textViewSpring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spring (March - May): Mild and wet, as the snow melts and temperatures rise. Expect rain and the return of greenery. This is a transition period, sometimes feeling like a mix of warm and cool days. "
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Key Weather Points -->
        <TextView
            android:id="@+id/textViewKeyPointsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Weather Points"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textViewTemperatureRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*   Temperature Range: Ohio experiences a wide range, from cold winters where temperatures drop below freezing (0°C) to hot and humid summers reaching 30°C or higher.  This is a significant difference from the more consistent warmth found in many parts of Africa. "
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewPrecipitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*   Precipitation:  Rainfall is distributed throughout the year, unlike the distinct wet and dry seasons in tropical climates. Expect an average of about 40 inches (1000 mm) of precipitation annually, including snow in winter."
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewSevereWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*   Severe Weather: Ohio can experience severe thunderstorms, especially in spring and summer. Tornadoes are also a possibility, though less frequent than in some other Midwestern states. "
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/textViewComparisonTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tip: When comparing Ohio's weather to your home country, focus on how temperatures change throughout the year and the type of precipitation (rain vs. snow). "
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</ScrollView>