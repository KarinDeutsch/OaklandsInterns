<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="-8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/welcome_oakland_interns"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/textBtn"
            android:textStyle="bold"
            android:background="@color/btnBack"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>
        <ImageView
            android:layout_width="50dp"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/oaklandnurserylogo_1"
            android:layout_gravity="start"/>
    </FrameLayout>

    <!-- Main container for the button rows, replacing GridLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- First row of buttons (3 buttons) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <!-- Define buttons inside the GridLayout -->
            <ImageButton
                android:id="@+id/btnColumbus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/columbus_guide"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/btnDelaware"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/delaware_guide"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/btnDublin"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/dublin_guide"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>
        </LinearLayout>

        <!-- Second row of buttons (3 buttons) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/btnNewAlbany"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/albany_guide"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>
            <androidx.constraintlayout.widget.Placeholder
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>
            <androidx.constraintlayout.widget.Placeholder
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:stateListAnimator="@anim/scale_on_click"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:padding="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
