<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/welcome_oakland_interns"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/textBtn"
            android:textStyle="bold"
            android:background="@color/btnBack"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>

        <ImageView
            android:layout_width="50dp"
            android:paddingStart="10dp"
            android:id="@+id/oakland_logo"
            android:layout_height="wrap_content"
            android:src="@drawable/oaklandnurserylogo_1"
            android:layout_gravity="start"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Important U.S. Laws and Rules:"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/btnBack"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Always carry your passport and DS-2019 when outside your home."
        android:textSize="14sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:background="@color/btnBack"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. To drive, you need either an Ohio license or an International Driving Permit with insurance."
        android:textSize="14sp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:background="@color/btnBack"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Texting while driving is illegal and police can stop you for it."
        android:textSize="14sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:background="@color/btnBack"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Driving or biking with headphones in both ears is illegal."
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/btnBack"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Respect local curfews, especially in parks or public areas at night."
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/btnBack"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. Open alcohol containers are illegal in cars and most public areas."
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/btnBack"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnBack"
        android:textColor="@color/textBtn"
        android:backgroundTint="@color/btnBack"
        android:layout_marginTop="20dp"
        android:text="Go back"/>
</LinearLayout>