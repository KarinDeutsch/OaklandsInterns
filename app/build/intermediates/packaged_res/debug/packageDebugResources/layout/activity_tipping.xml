<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="-8dp"
        android:id="@+id/topBar"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/welcome_oakland_interns"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/textBtn"
            android:textStyle="bold"
            android:background="@color/btnBack"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>
        <ImageView
            android:layout_width="50dp"
            android:paddingStart="10dp"
            android:id="@+id/oakland_logo"
            android:layout_height="wrap_content"
            android:src="@drawable/oaklandnurserylogo_1"
            android:layout_gravity="start"/>
    </FrameLayout>

    <!-- Scrollable content below -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="TIPS – What You’re Expected to Pay Extra For in the U.S."
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="In the U.S., tipping is part of normal life. It’s not just a “thank you” — most service workers rely on tips to survive. If you don’t tip, people might think you’re rude or cheap, even if you didn’t mean it."
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Restaurants -->
            <TextView
                android:text="Restaurants"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="• 15–20% of the bill is standard."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• Always tip if you're served at a table."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• If the service is bad, tip less, but never zero."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- Counter Service -->
            <TextView
                android:text="Counter Service"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• Not required, but $1–2 is nice if they’re friendly or make something special."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- Taxis & Rideshare -->
            <TextView
                android:text="Taxis &amp; Rideshare"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• 10–20% is expected."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• Some apps ask for a tip after the ride."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- Haircuts, Nails, Beauty -->
            <TextView
                android:text="Haircuts, Nails, Beauty"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• Tip 15–20% of the total."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• Even for a cheap haircut, always tip."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- Food Delivery -->
            <TextView
                android:text="Food Delivery"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• $3–6 minimum or 15–20%, whichever is more."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• Even if it’s late, the driver may not be at fault."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- Hotel Services -->
            <TextView
                android:text="Hotel Services"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• $1–2 per bag for luggage help."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• $2–5 per night for housekeeping."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- No Tip Needed -->
            <TextView
                android:text="No Tip Needed"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• Fast food (McDonald’s, Taco Bell, etc.)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• Grocery stores, gas stations, shops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="• Doctors, police, teachers, government offices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Final Tip -->
            <TextView
                android:text="If you're unsure, ask an American nearby: “Do I tip for this?” Most people will help you out."
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>